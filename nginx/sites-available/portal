server {
    if ($host = segured.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    if ($host = www.segured.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    server_name www.segured.org segured.org;
    listen 80;
    return 404; # managed by Certbot


}

